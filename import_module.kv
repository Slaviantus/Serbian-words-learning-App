#:include modules_view.kv

<ImportModuleWindow@Screen>:
    name:"import_module"

    module_display: text_input_a
    import_button: button_a

    on_enter: root.on_open_window()

    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.86 * root.height

            Label:
                text: "To import whole module, you need to import .txt file in following format:\n<name>\n<author>\n<description>\n[Cyrilic/Latin/Translation]\n[Cyrilic/Latin/Translation]"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                halign: 'center'
                text_size: self.size
                size_hint: 1, 0.2 * root.height


            TextInput:
                id: text_input_a
                text: ""
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                halign: 'center'
                text_size: self.size
                size_hint: 1, 0.67 * root.height
                background_color: 0, 0, 0, 1

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.002 * root.height
                        rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height


        Button:
            id: button_a
            text: "IMPORT"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                on_active: root.on_import_button_clicked()



        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "modules_view"
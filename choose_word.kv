#:include modules_list.kv
#:include transition_page.kv

<ChooseWordWindow@Screen>:
    name:"choose_word"

    translation_label: label_d
    sum_unknown: label_a
    sum_known: label_b
    sum_learned: label_c
    variant_1: button_a
    variant_2: button_b
    variant_3: button_c
    variant_4: button_d
    scale: box_layout_a
    progress_level: box_layout_b
    empty_progress: box_layout_c
    on_enter: root.on_open_window()


    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.07 * root.height
            padding: 0.01 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height


            Label:
                id: label_a
                text: ""
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                font_name: 'clacon2.ttf'
                size_hint: 0.07 * root.height, 1

            Label:
                text: "/"
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                font_name: 'clacon2.ttf'
                size_hint: 0.07 * root.height, 1


            Label:
                id: label_b
                text: ""
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                font_name: 'clacon2.ttf'
                size_hint: 0.07 * root.height, 1


            Label:
                text: "/"
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                font_name: 'clacon2.ttf'
                size_hint: 0.07 * root.height, 1


            Label:
                id: label_c
                text: ""
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                font_name: 'clacon2.ttf'
                size_hint: 0.07 * root.height, 1

        BoxLayout:
            id: box_layout_a
            orientation: "horizontal"
            size_hint: 1, 0.06 * root.height
            padding: 0.01 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            BoxLayout:
                id: box_layout_b
                orientation: "vertical"

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            BoxLayout:
                id: box_layout_c
                orientation: "vertical"


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.2 * root.height
            padding: 0.02 * root.height

            Label:
                id: label_d
                text: ""
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.03 * root.height
                size_hint: 1, 0.2 * root.height
                halign: 'left'
                valign: 'top'
                text_size: self.size
                background_down: ''
                background_color: 0, 0, 0, 0

        Button:
            id: button_a
            text: ""
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            size_hint: 1, 0.1 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_variant_word_clicked(self, self.text)


        Button:
            id: button_b
            text: ""
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            size_hint: 1, 0.1 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_variant_word_clicked(self, self.text)


        Button:
            id: button_c
            text: ""
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            size_hint: 1, 0.1 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_variant_word_clicked(self, self.text)

        Button:
            id: button_d
            text: ""
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            size_hint: 1, 0.1 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_variant_word_clicked(self, self.text)


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.22 * root.height


        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_back_button_clicked()
                app.root.current = "modules_list"















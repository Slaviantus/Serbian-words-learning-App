#:include modules_view.kv
#:include modules_list.kv

#:import FadeTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    StartWindow:
    ModulesViewWindow:
    AddModuleWindow:
    EditModuleWindow:
    AddWordWindow:
    EditWordWindow:
    ModuleDeleteWindow:
    ModulesListWindow:
    TypingAnswerWindow:
    MistakeCorrectionWindow:
    ChooseWordWindow:
    IntroductionModuleWindow:
    CongratulationsWindow:
    TransitionPageWindow:
    ImportModuleWindow:



#================================ START PAGE ================================
<StartWindow>:
    name: "start"


    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height



        BoxLayout:
            size: root.width, root.height
            orientation: "vertical"
            size_hint: 1, 0.31 * root.height


        Label:
            text: "<   5Gchip   >"
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.06 * root.height
            size_hint: 1, 0.1 * root.height


        Label:
            text: "================="
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.06 * root.height
            size_hint: 1, 0.04 * root.height


        Label:
            text: "Srpske reƒçi"
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.06 * root.height
            size_hint: 1, 0.1 * root.height


        BoxLayout:
            size: root.width, root.height
            orientation: "vertical"
            size_hint: 1, 0.31 * root.height


        Button:
            text: "LEARN SERBIAN"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.manager.transition = FadeTransition()
                app.root.current = "modules_list"


        Button:
            text: "EDIT"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.manager.transition = FadeTransition()
                app.root.current = "modules_view"















#:include modules_view.kv
#:include import_module.kv

<AddModuleWindow@Screen>:
    name:"add_module"

    enter_name: text_input_a
    enter_author: text_input_b
    enter_description: text_input_c


    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height


        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.79 * root.height

            Label:
                text: "MODULE NAME:"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.04 * root.height
                halign: 'center'
                text_size: self.size
                size_hint: 1, 0.07 * root.height

            TextInput:
                id: text_input_a
                font_name: 'clacon2.ttf'
                foreground_color: 0.549, 0.941, 0.627, 1
                background_color: 0, 0, 0, 0
                font_size: 0.04 * root.height
                size_hint: 1, 0.07 * root.height
                multiline: False
                padding: 0.01 * root.height

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.001 * root.height
                        rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

            Label:
                text: "AUTHOR:"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                halign: 'center'
                text_size: self.size
                font_size: 0.04 * root.height
                size_hint: 1, 0.07 * root.height

            TextInput:
                id: text_input_b
                font_name: 'clacon2.ttf'
                foreground_color: 0.549, 0.941, 0.627, 1
                background_color: 0, 0, 0, 0
                font_size: 0.04 * root.height
                size_hint: 1, 0.07 * root.height
                multiline: False
                padding: 0.01 * root.height

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.001 * root.height
                        rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

            Label:
                text: "DESCRIPTION:"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                halign: 'center'
                text_size: self.size
                font_size: 0.04 * root.height
                size_hint: 1, 0.07 * root.height

            TextInput:
                id: text_input_c
                font_name: 'clacon2.ttf'
                foreground_color: 0.549, 0.941, 0.627, 1
                background_color: 0, 0, 0, 0
                font_size: 0.04 * root.height
                size_hint: 1, 0.44 * root.height
                multiline: False
                padding: 0.025 * root.height

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.001 * root.height
                        rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height

        Button:
            text: "ADD MODULE"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_add_module_clicked()
                app.root.current = "modules_view"


        Button:
            text: "IMPORT MODULE"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "import_module"


        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "modules_view"








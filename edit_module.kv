#:include modules_view.kv
#:include add_word.kv
#:include edit_word.kv
#:include module_delete.kv


<EditModuleWindow@Screen>:

    name: "edit_module"

    name_display: text_input_a
    description_display: text_input_c
    author_display: text_input_b
    total_words: label_a
    words_list: list_a

    on_enter: root.on_open_window()
    on_leave: root.on_close_window()



    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height

        TextInput:
            id: text_input_a
            size_hint: 1, 0.09 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            foreground_color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height
            readonly: True
            cursor_color: 0.549, 0.941, 0.627, 1
            padding: 0.025 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

        TextInput:
            id: text_input_b
            size_hint: 1, 0.05 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            foreground_color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.03 * root.height
            cursor_color: 0.549, 0.941, 0.627, 1
            readonly: True

        TextInput:
            id: text_input_c
            size_hint: 1, 0.07 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            foreground_color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            readonly: True
            cursor_color: 0.549, 0.941, 0.627, 1
            padding: 0.02 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height


        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.07 * root.height

            Label:
                id: label_a
                text: ""
                color: 0.549, 0.941, 0.627, 1
                font_name: 'clacon2.ttf'
                halign: 'center'
                valign: 'center'
                text_size: self.size
                font_size: 0.04 * root.height
                size_hint: 0.07 * root.height, 1
                width: root.width * 0.6

            Button:
                text: "EDIT"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.04 * root.height
                size_hint: 0.07 * root.height, 1
                background_down: ''
                background_color: 0, 0, 0, 0
                width: root.width * 0.4

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.002 * root.height
                        rectangle: self.x, self.y, self.width, self.height

                on_press:
                    self.background_color = 0.549, 0.941, 0.627, 1
                    self.color = 0, 0, 0, 1

                on_release:
                    self.background_color = 0, 0, 0, 0
                    self.color = 0.549, 0.941, 0.627, 1
                    root.on_edit_button_clicked()

        BoxLayout:
            orientation: "vertical"
            padding: 0.025 * root.height
            size_hint: 1, 0.51 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.2
                    rectangle: self.x + 10, self.y + 10, self.width - 20, self.height - 20


            ScrollView:
                GridLayout:
                    id: list_a
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

        Button:
            text: "ADD WORD"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "add_word"


        Button:
            text: "DELETE MODULE"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "module_delete"


        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_back_button_clicked()
                app.root.current = "modules_view"



#:include modules_list.kv

<CongratulationsWindow@Screen>:

    name:"congratulations"


    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.13 * root.height


        Label:
            text: "CONGRATULATIONS!"
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height
            size_hint: 1, 0.3 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height


        Label:
            text: "You have learnt all words in module!"
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height
            size_hint: 1, 0.2 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.3 * root.height


        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "modules_list"
#:include modules_list.kv
#:include typing_answer.kv
#:include choose_word.kv

<IntroductionModuleWindow@Screen>:

    name:"introduction_module"

    name_display: label_a
    description_display: text_input_a
    author_display: label_b
    total_words: label_c
    progress_label: label_d
    alphabet_label: label_e
    learn_button: button_a

    on_enter: root.on_open_window()


    BoxLayout:
        orientation: "vertical"
        padding: 0.025 * root.height

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 0.001 * root.height
                rectangle: self.x + 0.025 * root.height, self.y + 0.025 * root.height, self.width - 0.05 * root.height, self.height - 0.05 * root.height

        Label:
            id: label_a
            text: ""
            size_hint: 1, 0.09 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

        Label:
            id: label_b
            size_hint: 1, 0.05 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.03 * root.height

        TextInput:
            id: text_input_a
            size_hint: 1, 0.07 * root.height
            background_color: 0, 0, 0, 0
            font_name: 'clacon2.ttf'
            foreground_color: 0.549, 0.941, 0.627, 1
            font_size: 0.03 * root.height
            readonly: True
            multiline: True
            padding: 0.01 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

        Label:
            id: label_c
            text: ""
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height

        Label:
            id: label_d
            text: ""
            color: 0.549, 0.941, 0.627, 1
            font_name: 'clacon2.ttf'
            halign: 'center'
            valign: 'center'
            text_size: self.size
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height


        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.27 * root.height

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.001 * root.height
                    rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

            Label:
                text: "ALPHABET"
                color: 0.549, 0.941, 0.627, 1
                font_name: 'clacon2.ttf'
                halign: 'center'
                valign: 'center'
                text_size: self.size
                font_size: 0.04 * root.height
                size_hint: 1, 0.1 * root.height

            Label:
                id: label_e
                color: 0.549, 0.941, 0.627, 1
                font_name: 'clacon2.ttf'
                halign: 'center'
                valign: 'center'
                text_size: self.size
                font_size: 0.04 * root.height
                size_hint: 1, 0.1 * root.height

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.001 * root.height
                        rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height - 0.02 * root.height

            Button:
                text: "CHANGE"
                font_name: 'clacon2.ttf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 0.04 * root.height
                size_hint: 1, 0.07 * root.height
                background_down: ''
                background_color: 0, 0, 0, 0

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 0.002 * root.height
                        rectangle: self.x + 0.01 * root.height, self.y + 0.01 * root.height, self.width - 0.02 * root.height, self.height

                on_press:
                    self.background_color = 0.549, 0.941, 0.627, 1
                    self.color = 0, 0, 0, 1

                on_release:
                    self.background_color = 0, 0, 0, 0
                    self.color = 0.549, 0.941, 0.627, 1
                    root.on_changing_alphabet()

        BoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.24 * root.height


        Button:
            id: button_a
            text: "LEARN"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_learn_button_clicked()


        Button:
            text: "BACK"
            font_name: 'clacon2.ttf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 0.04 * root.height
            size_hint: 1, 0.07 * root.height
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 0.002 * root.height
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "modules_list"